<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here.
 -->
        <!-- используйте значение true, чтобы скрыть заголовок -->
        <item name="android:windowNoTitle">true</item>
        <!-- используйте значение true, чтобы скрыть строку состояния и освободить место для приложения -->
        <item name="android:windowFullscreen">false</item>
        <!-- ресурс цвета или drawable для фона -->
        <item name="android:windowBackground">@color/activityBackground</item>
        <!--  основной цвет для интерфейса программы - панель, кнопки и т.д. -->
        <item name="colorPrimary">@color/primary</item>
        <!--  цвет для системных элементов - строка состояния -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   Цвет по умолчанию для компонентов, которые находятся в фокусе или активны -->
        <item name="colorAccent">@color/accent</item><!--   Цвет для неактивных компонентов
        <item name="android:colorControlNormal">@color/accent_color</item>-->
        <!--   Цвет для активных компонентов
        <item name="android:colorControlActivated">@color/accent_color</item>-->
        <!--   Цвет для нажатых элементов интерфейса
        <item name="android:colorControlHighlight">@color/accent_color</item>-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:colorBackground">@color/activityBackground</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="MainActivity" parent="Theme.AppCompat.Light">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/activityBackground</item>
    </style>

    <style name="SearchActivity" parent="Theme.AppCompat.Light">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/activityBackground</item>
    </style>


    <style name="TextTitleStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/TextTitle</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextTitleStyle.helpText" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/TextTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TextItem" parent="Theme.AppCompat.Light">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/TextTitle</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/TextTitle</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/buttonText</item>
        <item name="colorButtonNormal">@color/buttonBackground</item>
        <item name="colorControlHighlight">@color/buttonHighlight</item>
    </style>

    <style name="ButtonStyle.AboutButtonStyle">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="ButtonStyle.Back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">

        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>


        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
